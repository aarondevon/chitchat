<?xml version="1.0" encoding="UTF-8"?>
<hibernate-configuration xmlns="urn:nhibernate-configuration-2.2">
  <session-factory>
    <property name="connection.connection_string">server=${SERVER};database=${DATABASE};user id=${USER_ID};password={PASSWORD};</property>
    <property name="dialect">NHibernate.Dialect.PostgreSQL83Dialect</property>
    <property name="connection.driver_class">NHibernate.Driver.NpgsqlDriver</property>
    <property name="show_sql">true</property>
    <property name="format_sql">true</property>
    <property name="adonet.batch_size">10</property>
    <mapping assembly="CoreLibrary" />
  </session-factory>
</hibernate-configuration>